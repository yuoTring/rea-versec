<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="16dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonAddTag"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:minWidth="48dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/button_corner_16_blue_gradient"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonDeleteTag"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        android:backgroundTint="@color/white"
        android:src="@drawable/icon_chat"
        app:layout_constraintTop_toTopOf="@id/buttonAddTag"
        app:layout_constraintEnd_toEndOf="@id/buttonAddTag"
        />



</androidx.constraintlayout.widget.ConstraintLayout>