<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.signup.CongratsActivity">

    <ImageView
        android:id="@+id/imageCongrats"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/congrats"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/imageBigCircle"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginBottom="176dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/circle_big"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imageSmallCircle"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/circle_small"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text000"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:text="가입을 축하드립니다!"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/imageCongrats"
        />

    <TextView
        android:id="@+id/text001"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_marginTop="4dp"
        android:text="트링과 함께 다양한 경험을 해보세요!"
        android:textColor="@color/blue_azure"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/text000"
        />

    <TextView
        android:id="@+id/text002"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:text="잠시 후 자동으로 다음페이지로 이동됩니다..."
        android:textColor="@color/gray"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@id/text001"
        />





</androidx.constraintlayout.widget.ConstraintLayout>